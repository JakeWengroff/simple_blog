<div class="simple-blog-posts-index">
  <h1 class="simple-blog-title"><%= t('.page_heading') %></h1>

  <% if @blog_posts.present? %>
    <% @blog_posts.each do |post| %>
      <div class="simple-blog-post">
        <h2 class="simple-blog-post-title"><%= link_to post.pretty_title, blog_post_path(post) %></h2>
        <p class="simple-blog-post-body"><%= raw post.description %></p>
        <% if post.tag_list.present? %>
          <div class="simple-blog-post-tags">
            Tags: <%= blog_post_tags(post) %>
          </div>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <p class="simple-blog-posts-missing"><%= t('.no_published_posts') %></p>
  <% end %>
</div>
