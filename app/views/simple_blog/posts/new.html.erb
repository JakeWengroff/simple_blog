<div class="simple-blog-posts-new">
  <%= form_for :post, :url => simple_blog.posts_path do |f| %>
    <div class="simple-blog-new-post-row">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="simple-blog-new-post-row">
      <%= f.label :body %>
      <%= f.text_area :body %>
    </div>
    <div class="simple-blog-new-post-row">
      <%= f.label :published_at %>
      <%= f.text_field :published_at %>
    </div>
    <div class="simple-blog-new-post-row">
      <%= f.submit %>
    </div>
  <% end %>
</div>
