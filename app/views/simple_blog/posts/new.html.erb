<%= form_for :post, :url => simple_blog.posts_path do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.label :published_at %>
    <%= f.text_field :published_at %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
