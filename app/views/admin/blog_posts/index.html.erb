<div class="simple-blog-posts-index">
  <h1 class="simple-blog-title"><%= t('.page_heading') %></h1>

  <% if @blog_posts.present? %>
    <% @blog_posts.each do |post| %>
      <div class="simple-blog-post">
        <h2 class="simple-blog-post-title"><%= link_to post.title.titleize, edit_admin_blog_post_path(post) %></h2>
        <p class="simple-blog-post-body"><%= post.body.html_safe %></p>
        <div class="simple-blog-post-tags">
          Tags: <%= post.tag_list %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="simple-blog-posts-missing"><%= t('.no_published_posts') %></p>
  <% end %>
  <%= link_to t('.new_post'), new_admin_blog_post_path %>
</div>
