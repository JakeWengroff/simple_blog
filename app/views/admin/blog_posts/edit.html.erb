<div class="simple-blog-posts-new">
  <%= form_for @blog_post, :url => admin_blog_post_path(@blog_post.id), :method => :put do |f| %>
    <%= render 'form', :f => f %>
    <div class="simple-blog-new-post-row">
      <%= f.submit t('.submit'), :class => "simple-blog-new-post-submit" %>
      <%= link_to "Delete post", admin_blog_post_path(@blog_post.id), :method => :delete %>
    </div>
  <% end %>
</div>

